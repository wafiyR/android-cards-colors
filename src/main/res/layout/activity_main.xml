<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:gravity="center">

<!--
        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />
-->

        <ImageView
            android:id="@+id/imgCircle"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_row="1"
            android:layout_column="0"
            android:contentDescription="@string/cont_descImgCricle"
            app:srcCompat="@drawable/redcircle" />

<!--        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />-->

        <ImageView
            android:id="@+id/imgRectangle"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:contentDescription="@string/cont_descImgRectangle"
            app:srcCompat="@drawable/bluerect" />



<!--        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />-->

        <ImageView
            android:id="@+id/imgAndroid"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:contentDescription="@string/cont_descImgAndroid"
            app:srcCompat="@drawable/ic_android" />
<!--
        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />-->

        <ImageView
            android:id="@+id/imgSquare"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:contentDescription="@string/cont_descImgSquare"
            app:srcCompat="@drawable/yellowsquare" />

<!--        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />-->

    </GridLayout>






</LinearLayout>