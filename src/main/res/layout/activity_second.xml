<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:gravity="center"
        android:orientation="horizontal"
        android:rowCount="2">


        <ImageView
            android:id="@+id/imgCircleSecond"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_row="1"
            android:layout_column="0"
            android:contentDescription="@string/cont_descImgCricle"
            app:srcCompat="@drawable/redcircle" />


        <ImageView
            android:id="@+id/imgRectangleSecond"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:contentDescription="@string/cont_descImgRectangle"
            app:srcCompat="@drawable/bluerect" />

        <ImageView
            android:id="@+id/imgSquareSecond"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:contentDescription="@string/cont_descImgSquare"
            app:srcCompat="@drawable/yellowsquare" />

        <ImageView
            android:id="@+id/imgAndroidSecond"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:contentDescription="@string/cont_descImgAndroid"
            app:srcCompat="@drawable/ic_android" />





    </GridLayout>


</LinearLayout>